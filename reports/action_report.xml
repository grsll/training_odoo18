<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_pendaftaran" model="ir.actions.report">
            <field name="name">Bukti Pendaftaran</field>
            <field name="model">cdn.pendaftaran</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kursus.report_pendaftaran</field>
            <field name="report_file">kursus.report_pendaftaran</field>
            <field name="print_report_name">'Bukti Pendaftaran - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_cdn_pendaftaran"/>
            <field name="binding_type">report</field>
        </record>
        <record id="paperformat_id_card" model="report.paperformat">
            <field name="name">ID Card 90x55mm</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">55</field>
            <field name="page_width">90</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        <record id="action_report_peserta" model="ir.actions.report">
            <field name="name">Kartu Peserta</field>
            <field name="model">cdn.peserta</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kursus.report_peserta</field>
            <field name="report_file">kursus.report_peserta</field>
            <field name="print_report_name">'Kartu Peserta - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_cdn_peserta"/>
            <field name="paperformat_id" ref="paperformat_id_card"/>
            <field name="binding_type">report</field>
        </record>
        <record id="action_report_kehadiran" model="ir.actions.report">
            <field name="name">Laporan Kehadiran</field>
            <field name="model">cdn.kehadiran</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kursus.report_kehadiran</field>
            <field name="report_file">kursus.report_kehadiran</field>
            <field name="print_report_name">'Laporan Kehadiran - %s' % (object.tanggal)</field>
            <field name="binding_model_id" ref="model_cdn_kehadiran"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
