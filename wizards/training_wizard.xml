<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cdn_wizard_training_view_list" model="ir.ui.view">
            <field name="name">cdn.wizard.training.view.list</field>
            <field name="model">cdn.wizard.training</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="session_id"/>
                        <field name="peserta_ids"/>
                    </group>
                    <footer>
                        <button name="tambah_peserta" string="Tambah Peserta" type="object" confirm="Apakah Anda yakin akan menambah Peserta pada Sesi ini ?" class="btn-primary"/>
                        <button string="Batal" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- cdn_wizard_training form view -->
        <record id="cdn_wizard_training_view_form" model="ir.ui.view">
            <field name="name">cdn.wizard.training.view.form</field>
            <field name="model">cdn.wizard.training</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="session_ids" widget="many2many_tags" options="{'no_create_edit' : True}"/>
                            <field name="peserta_ids"/>
                        </group>
                        <footer>
                            <button name="tambah_banyak_peserta" string="Tambah Banyak Peserta" type="object" confirm="Apakah Anda yakin akan menambah Peserta pada semua Sesi yang dipilih ini ?" class="btn-primary"/>
                            <button string="Batal" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- cdn_wizard_training action window -->
        <record id="cdn_wizard_training_action" model="ir.actions.act_window">
            <field name="name">Tambah Peserta</field>
            <field name="res_model">cdn.wizard.training</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_cdn_training_session" />
            <field name="binding_view_types">form</field>
            <field name="view_id" ref="cdn_wizard_training_view_list"/>
        </record>
        <!-- cdn_wizard_training action window -->
        <record id="cdn_wizard_training_action_multi" model="ir.actions.act_window">
            <field name="name">Tambah Banyak Peserta</field>
            <field name="res_model">cdn.wizard.training</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_cdn_training_session" />
            <field name="binding_view_types">list</field>
            <field name="view_id" ref="cdn_wizard_training_view_form"/>
        </record>
        
    </data>
</odoo>