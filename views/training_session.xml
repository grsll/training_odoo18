<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cdn_training_session_view_list" model="ir.ui.view">
            <field name="name">cdn.training.session.view.list</field>
            <field name="model">cdn.training.session</field>
            <field name="arch" type="xml">
                <list decoration-danger="jumlah_peserta == 0">
                    <!-- Add your fields here -->
                    <field name="start_date"/>
                    <field name="name"/>
                    <field name="duration"/>
                    <field name="jumlah_peserta"/>
                    <field name="instruktur_id"/>
                </list>
            </field>
        </record>
        <!-- cdn_training_session form view -->
        <record id="cdn_training_session_view_form" model="ir.ui.view">
            <field name="name">cdn.training.session.view.form</field>
            <field name="model">cdn.training.session</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state != 'confirm'"/>
                        <button name="action_reset" string="Reset" type="object" class="oe_link" invisible="state != 'done'"/>
                        <field name="state" widget="statusbar" statusbar_visible_levels="draft,confirm,done"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" text="Selesai" bg_color="bg-info" invisible="state != 'done'" />
                        <group string="Informasi Kursus">
                            <group>
                                <field name="start_date" readonly="state != 'draft'"/>
                                <field name="name" readonly="state != 'draft'"/>
                                <field name="course_id" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="duration" readonly="state != 'draft'"/>
                                <field name="jumlah_peserta" readonly="state != 'draft'"/>
                                <field name="instruktur_id" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <group name="instruktur" string="Data Instruktur">
                            <group>
                                <field name="instruktur_id" readonly="state != 'draft'"/>
                                <field name="jenis_kelamin" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="no_hp" readonly="state != 'draft'"/>
                                <field name="email" readonly="state != 'draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Peserta">
                                <field name="peserta_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="jenis_kelamin"/>
                                        <field name="mobile"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="cdn_training_session_view_calendar" model="ir.ui.view">
            <field name="name">cdn.training.session.view.calendar</field>
            <field name="model">cdn.training.session</field>
            <field name="arch" type="xml">
                <calendar string="Kalender" date_start="start_date">
                    <field name="name" filters="1"/>
                    <field name="instruktur_id"/>
                </calendar>
            </field>
        </record>
        <!-- cdn_training_session action window -->
        <record id="cdn_training_session_action" model="ir.actions.act_window">
            <field name="name">Training Session</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.training.session</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="training_session_menu_act" name="Sesi Training" parent="training_menu_categ" action="cdn_training_session_action" sequence="10"/>
    </data>
</odoo>