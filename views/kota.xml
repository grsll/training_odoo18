<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cdn_kota_view_list" model="ir.ui.view">
            <field name="name">cdn.kota.view.list</field>
            <field name="model">cdn.kota</field>
            <field name="arch" type="xml">
                <list string="">
                    <field name="name"/>
                    <field name="kode"/>
                    <field name="singkatan"/>
                    <field name="description"/>
                    <field name="propinsi_id"/>
                </list>
            </field>
        </record>
        <!-- cdn_kota form view -->
        <record id="cdn_kota_view_form" model="ir.ui.view">
            <field name="name">cdn.kota.view.form</field>
            <field name="model">cdn.kota</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="kode"/>
                            <field name="singkatan"/>
                            <field name="description"/>
                            <field name="propinsi_id"/>
                        </group>
                        <notebook>
                            <page name="kecamatan" string="Kecamatan">
                                <field name="kecamatan_ids"/>
                                <list>
                                    <field name="kode"/>
                                    <field name="name"/>
                                </list>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="cdn_kota_view_search" model="ir.ui.view">
            <field name="name">cdn.kota.view.search</field>
            <field name="model">cdn.kota</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="name"/>
                    <field name="kode"/>
                    <field name="singkatan"/>
                    <filter name="filter_sumatra" string="Kota di Wilayah Sumatra" domain="[('propinsi_id.kode', 'in',('11','12','13'))]"/>
                    <filter name="filter_jawa" string="Kota di Pulau Jawa" domain="[('propinsi_id.kode', 'in', ('31','32','33','34','35','36'))]"  />
                    <filter name="filter_ci" string="Kota Depannya Ci" domain="[('name', 'like', 'CI')]"  />
                    <filter name="filter_desa" string="Kecamatan Wajak" domain="[('kecamatan_ids.name', 'ilike', 'pakis')]"  />
                </search>
            </field>
        </record>
        <!-- cdn_kota action window -->
        <record id="cdn_kota_action" model="ir.actions.act_window">
            <field name="name">cdn.kota.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.kota</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="kota_menu_act" name="Kota" parent="wilayah_menu_categ" action="cdn_kota_action" sequence="10"/>
    </data>
</odoo>