<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cdn_peserta_view_list" model="ir.ui.view">
            <field name="name">cdn.peserta.view.list</field>
            <field name="model">cdn.peserta</field>
            <field name="arch" type="xml">
                <list string="">
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="jenis_kelamin"/>
                    <field name="street" string="Alamat"/>
                    <field name="mobile" string="No Telp"/>
                    <field name="email" string="Email"/>
                </list>
            </field>
        </record>
        <!-- cdn_peserta form view -->
        <record id="cdn_peserta_view_form" model="ir.ui.view">
            <field name="name">cdn.peserta.view.form</field>
            <field name="model">cdn.peserta</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar" />
                        <group name="identitas_peserta" string="Identitas Siswa">
                            <!-- Add your fields here -->
                            <group>
                                <field name="name"/>
                                <field name="jenis_kelamin"/>
                                <field name="email" string="Email"/>
                            </group>
                            <group>
                                <field name="tempat_lahir"/>
                                <field name="tanggal_lahir"/>
                                <field name="mobile" string="No Telp"/>
                            </group>
                        </group>
                        <group name="tempat_tinggal" string="Tempat Tinggal Siswa">
                            <group colspan="4">
                                <field name="street" string= "Alamat"/>
                            </group>
                            <group>
                                <field name="propinsi_id"/>
                                <field name="kota_id" domain="[('propinsi_id','=',propinsi_id)]"/>
                            </group>
                            <group>
                                <field name="kecamatan_id" domain="[('kota_id','=',kota_id)]"/>
                                <field name="desa_id" domain="[('kecamatan_id','=',kecamatan_id)]"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="jenjang_pendidikan"/>
                                <field name="is_menikah"/>
                            </group>
                            <group>
                                <field name="pekerjaan"/>
                            </group>
                        </group>
                        <group name="pasangan" string="Identitas Pasangan" invisible="not is_menikah">
                            <group>
                                <field name="nama_pasangan" required="is_menikah"/>
                            </group>
                            <group>
                                <field name="hp_pasangan"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="cdn_peserta_view_search" model="ir.ui.view">
            <field name="name">cdn.peserta.view.search</field>
            <field name="model">cdn.peserta</field>
            <field name="arch" type="xml">
                <search string="Jenis Kelamin">
                    <field name="jenis_kelamin"/>
                    <filter name="filter_laki-laki" string="Jenis Kelamin Laki-Laki" domain="[('jenis_kelamin', '=', 'laki-laki')]"/>
                    <filter name="filter_perempuan" string="Jenis Kelamin Perempuan" domain="[('jenis_kelamin', '=', 'perempuan')]"/>
                    <group expand="0">
                        <filter name="group_status_menikah" string="Status Pernikahan" context="{'group_by':'is_menikah'}"/>
                        
                    </group>
                </search>
            </field>
        </record>
        <!-- cdn_peserta action window -->
        <record id="cdn_peserta_action" model="ir.actions.act_window">
            <field name="name">Peserta</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.peserta</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>
        <menuitem id="peserta_menu_act" name="Peserta" parent="pengaturan_menu_categ" action="cdn_peserta_action" sequence="25"/>
    </data>
</odoo>