<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- cdn.kursus list view -->
        <record id="cdn_kursus_view_tree" model="ir.ui.view">
            <field name="name">cdn.kursus.view.tree</field>
            <field name="model">cdn.kursus</field>
            <field name="arch" type="xml">
                <list>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="description"/>
                    <field name="user_id"/>
                    <field name="produk_kursus_id"/>
                    <field name="harga_kursus"/>
                </list>
            </field>
        </record>
        <!-- cdn.kursus form view -->
        <record id="cdn_kursus_view_form" model="ir.ui.view">
            <field name="name">cdn.kursus.view.form</field>
            <field name="model">cdn.kursus</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="produk_kursus_id"/>
                            <field name="harga_kursus"/>
                            <field name="total_harga"/>
                        </group>
                        <notebook>
                            <page name="sesi" string="Sesi Kursus">
                                <group>
                                    <field name="session_line" nolabel="1"  colspan="2">
                                        <list string="Sesi" editable="bottom">
                                            <field name="name"/>
                                            <field name="start_date"/>
                                            <field name="duration"/>
                                            <field name="seats"/>
                                        </list>
                                        <form string='Sesi'>
                                            <group>
                                                <field name="name"/>
                                                <field name="start_date"/>
                                                <field name="duration"/>
                                                <field name="seats"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                            <page name="deskripsi" string="Keterangan">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>
                            <page name="konsumsi" string="Peralatan/Konsumsi">
                                <field name="produk_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="product_template_variant_value_ids" widget="many2many_tags"/>
                                        <field name="standard_price"/>
                                        <field name="lst_price"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- cdn.kursus action window -->
        <record id="cdn_kursus_action" model="ir.actions.act_window">
            <field name="name">Data Kursus</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.kursus</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="kursus_menu_act" name="Kursus" parent="master_menu_categ" action="cdn_kursus_action" sequence="10"/>
    </data>
</odoo>