<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- cdn.instruktur list view -->
        <record id="cdn_instruktur_view_tree" model="ir.ui.view">
            <field name="name">cdn.instruktur.view.list</field>
            <field name="model">cdn.instruktur</field>
            <field name="arch" type="xml">
                <list>
                    <!-- Add your fields here -->
                    <field name="name" string= "Nama Instruktur"/>
                    <field name="street" string= "Alamat"/>
                    <field name="street2" string= "RT/RW"/>
                    <field name="mobile" string= "No. HP"/>
                    <field name="email" string= "Email"/>
                    <field name="keahlian_ids" string= "Keahlian" widget="many2many_tags"/>
                </list>
            </field>
        </record>
        <!-- cdn.instruktur form view -->
        <record id="cdn_instruktur_view_form" model="ir.ui.view">
            <field name="name">cdn.instruktur.view.form</field>
            <field name="model">cdn.instruktur</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name" string= "Nama Instruktur"/>
                            <field name="email" string= "Email"/>
                            <field name="keahlian_ids" string= "Keahlian" widget="many2many_tags"/>
                        </group>
                        <group name="alamat" string="Alamat Lengkap">
                            <group>
                                <field name="street" string= "Alamat"/>
                                <field name="street2" string= "RT/RW"/>
                                <field name="mobile" string= "No. HP"/>
                                <field name="jenis_kelamin" string= "Jenis Kelamin"/>
                            </group>
                            <group>
                                <field name="propinsi_id"/>
                                <field name="kota_id" domain="[('propinsi_id', '=', propinsi_id)]"/>
                                <field name="kecamatan_id" domain="[('kota_id', '=', kota_id)]"/>
                                <field name="desa_id" domain="[('kecamatan_id', '=', kecamatan_id)]"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- cdn.instruktur action window -->
        <record id="cdn_instruktur_action" model="ir.actions.act_window">
            <field name="name">Data Instruktur</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.instruktur</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="instruktur_menu_act" name="Instruktur" parent="master_menu_categ" action="cdn_instruktur_action" sequence="10"/>
    </data>
</odoo>