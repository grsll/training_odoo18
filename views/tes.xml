<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_kota_list" model="ir.ui.view">
            <field name="name">cdn.kota.list</field>
            <field name="model">cdn.kota</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="kode"/>
                    <field name="singkatan"/>
                    <field name="description"/>
                    <field name="provinsi_id"/>
                </list>
            </field>
        </record>

        <record id="view_kota_form" model="ir.ui.view">
            <field name="name">cdn.kota.form</field>
            <field name="model">cdn.kota</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                                <field name="name"/>
                                <field name="kode"/>
                                <field name="singkatan"/>
                                <field name="description"/>
                                <field name="provinsi_id"/>
                        </group>
                        <notebook>
                            <page name="kecamatan" string="Kecamatan">
                                <field name="kecamatan_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="kode"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kota_view_search" model="ir.ui.view">
            <field name="name">cdn.kota.view.search</field>
            <field name="model">cdn.kota</field>
            <field name="arch" type="xml">
                <search string="Serch Kota">
                    <field name="name"/>
                    <field name="kode"/>
                    <field name="singkatan"/>
                    <filter name="filter_sumatera" string="Kota di Wilayah Sumatera" domain="[('provinsi_id.kode', 'in', ('11','12','13'))]"  />
                    <filter name="filter_jawa" string="Kota di Pulau Jawa" domain="[('provinsi_id.kode', 'in', ('31','32','33','34','35','36'))]"  />
                    <filter name="filter_ci" string="Kota Depannya Ci" domain="[('name', 'like', 'CI')]"  />
                    <filter name="filter_desa" string="Kecamatan Wajak" domain="[('kecamatan_ids.name', 'ilike', 'pakis')]"  />
                    
                </search>
            </field>
        </record>

        <record id="kota_action" model="ir.actions.act_window">
            <field name="name">cdn.kota</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.kota</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_kota" name="kota" parent="wilayah_menu_categ" action="kota_action" sequence="20"/>
    
    </data>
    

</odoo>