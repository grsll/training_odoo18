<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- kehadiran list view -->
        <record id="kehadiran_view_list" model="ir.ui.view">
            <field name="name">kehadiran.view.list</field>
            <field name="model">cdn.kehadiran</field>
            <field name="arch" type="xml">
                <list>
                    <field name="tanggal"/>
                    <field name="kursus_id"/>
                    <field name="session_id"/>
                </list>
            </field>
        </record>
        <!-- kehadiran form view -->
        <record id="kehadiran_view_form" model="ir.ui.view">
            <field name="name">kehadiran.view.form</field>
            <field name="model">cdn.kehadiran</field>
            <field name="arch" type="xml">
                <form>
                <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_reset" string="Reset" type="object" class="oe_link"/>
                        <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state != 'confirm'"/>
                        <field name="state" widget="statusbar" statusbar_visible_levels="draft,confirm,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="tanggal"/>
                                <field name="kursus_id"/>
                                <field name="session_id"/>
                                <field name="total_hadir"/>
                                <field name="nama_instruktur"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kehadiran Peserta">
                                <field name="kehadiran_line_ids" readonly="state != 'draft'">
                                    <list editable="bottom" create="0" >
                                        <field name="peserta_id" readonly="1" force_save="1" />
                                        <field name="jenis_kelamin" readonly="1" force_save="1"/>
                                        <field name="no_hp" readonly="1" force_save="1"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- kehadiran action window -->
        <record id="kehadiran_action" model="ir.actions.act_window">
            <field name="name">Kehadiran</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.kehadiran</field>
            <field name="view_mode">list,form</field>
        </record>
        <!-- Menu Item -->
        <menuitem id="kehadiran_menu" name="Kehadiran" parent="pendaftaran_menu_categ" action="kehadiran_action" sequence="25"/>
    </data>
</odoo>