<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- kehadiran list view -->
        <record id="kehadiran_view_list" model="ir.ui.view">
            <field name="name">kehadiran.view.list</field>
            <field name="model">cdn.kehadiran</field>
            <field name="arch" type="xml">
                <list>
                    <field name="tanggal"/>
                    <field name="kursus_id"/>
                    <field name="session_id"/>
                </list>
            </field>
        </record>

        <!-- kehadiran form view -->
        <record id="kehadiran_view_form" model="ir.ui.view">
            <field name="name">kehadiran.view.form</field>
            <field name="model">cdn.kehadiran</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="tanggal"/>
                                <field name="kursus_id"/>
                            </group>
                            <group>
                                <field name="session_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Peserta">
                                <field name="peserta_ids" force_save="1">
                                    <list editable="bottom">
                                        <field name="name" readonly="1"/>
                                        <field name="jenis_kelamin" readonly="1"/>
                                        <field name="mobile" readonly="1"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- kehadiran action window -->
        <record id="kehadiran_action" model="ir.actions.act_window">
            <field name="name">Kehadiran</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.kehadiran</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="kehadiran_menu" name="Kehadiran" parent="pendaftaran_menu_categ" action="kehadiran_action" sequence="25"/>

    </data>

</odoo>