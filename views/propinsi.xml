<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cdn_propinsi_view_list" model="ir.ui.view">
            <field name="name">cdn.propinsi.view.list</field>
            <field name="model">cdn.propinsi</field>
            <field name="arch" type="xml">
                <list string="">
                    <field name="name"/>
                    <field name="kode"/>
                    <field name="singkatan"/>
                    <field name="description"/>
                </list>
            </field>
        </record>
        <!-- cdn_propinsi form view -->
        <record id="cdn_propinsi_view_form" model="ir.ui.view">
            <field name="name">cdn.propinsi.view.form</field>
            <field name="model">cdn.propinsi</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="kode"/>
                            <field name="singkatan"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page name="kota" string="Kota">
                                <field name="kota_ids"/>
                                <list>
                                    <field name="kode"/>
                                    <field name="name"/>
                                </list>
                                
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- propinsi action window -->
        <record id="cdn_propinsi_action" model="ir.actions.act_window">
            <field name="name">Propinsi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.propinsi</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="propinsi_menu_act" name="Propinsi" parent="wilayah_menu_categ" action="cdn_propinsi_action" sequence="10"/>

    </data>
</odoo>